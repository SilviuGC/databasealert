<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:background="@drawable/gradient_background"
    >
    <ImageView
        android:id="@+id/circle2"
        android:layout_width="174dp"
        android:layout_height="154dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-100dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/circletransparent" />

    <ImageView
        android:id="@+id/circle3"
        android:layout_width="182dp"
        android:layout_height="182dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="-80dp"
        android:layout_marginBottom="-30dp"
        android:src="@drawable/circle" />

    <ImageView
        android:id="@+id/circle4"
        android:layout_width="134dp"
        android:layout_height="134dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="-50dp"
        android:layout_marginBottom="-50dp"
        android:layout_toLeftOf="@+id/circle3"
        android:src="@drawable/circletransparent" />
    <Button
        android:id="@+id/visualizedata"
        android:layout_width="200sp"
        android:layout_height="80sp"
        android:background="@drawable/button_round"
        android:layout_centerHorizontal="true"
        android:text="@string/visualize_data"
        android:textSize="25sp"
        android:textColor="#4E3E41"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_marginTop="140sp"
        android:layout_marginEnd="10sp"
        android:layout_marginRight="8sp"
        android:layout_marginLeft="8sp"
        />
    <Button
        android:id="@+id/visualizegraph"
        android:layout_width="200sp"
        android:layout_height="80sp"
        android:background="@drawable/button_round"
        android:layout_centerHorizontal="true"
        android:text="@string/visualize_graph"
        android:textSize="25sp"
        android:textColor="#4E3E41"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_below="@+id/visualizedata"
        android:layout_marginTop="40sp"
        android:layout_marginEnd="8sp"
        android:layout_marginRight="8sp"
        android:layout_marginLeft="8sp"
        />

    <Button
        android:id="@+id/setparameters"
        android:layout_width="200sp"
        android:layout_height="80sp"
        android:layout_below="@+id/visualizegraph"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="8sp"
        android:layout_marginTop="40sp"
        android:layout_marginEnd="8sp"
        android:layout_marginRight="8sp"
        android:background="@drawable/button_round"
        android:text="Settings"
        android:textAllCaps="false"
        android:textColor="#4E3E41"
        android:textSize="25sp"
        android:textStyle="bold"

        />

</RelativeLayout>